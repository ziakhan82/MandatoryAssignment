@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title[0].content_type_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title[0].primary_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title[0].original_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title[0].is_adult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title[0].start_year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title[0].end_year)
